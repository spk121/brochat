<?php
# Configuration file for BroChat web application

# Development or Production Mode
define('MODE', 'DEVELOPMENT');

# When non-zero, this will enable HTTPS for the development server.
# By default, the development server runs only HTTP port 8080 with no HTTPS.
define('DEVEL_HTTPS_ENABLED', 0);

# Website Domain Name
define('DOMAIN', 'yourdomain.com');

# HTTP and HTTPS Ports 
define('DEVEL_HTTP_PORT', 8080);
define('DEVEL_HTTPS_PORT', 8443);
define('PRODUCTION_HTTP_PORT', 80);
define('PRODUCTION_HTTPS_PORT', 443);

# SSL Certificates associated with this domain
define('SSL_CERTDIR', '/etc/ssl/certs');
define('SSL_PRIVATEDIR', '/etc/ssl/private');
# These files are only used when DEVEL_HTTPS_ENABLED is true
define('SSL_CERT_FILE_DEVEL', SSL_CERTDIR . '/selfsignedcert.pem');
define('SSL_KEY_FILE_DEVEL', SSL_PRIVATEDIR . '/selfsignedcert.key');
# These file are used in production mode, and these certificates should be 
# signed by a trusted Certificate Authority (CA) and pertain to the DOMAIN.
define('SSL_CERT_FILE_PRODUCTION', SSL_CERTDIR . '/' . DOMAIN . '.crt');
define('SSL_KEY_FILE_PRODUCTION', SSL_PRIVATEDIR . '/' . DOMAIN . '.key');

# Websocket server
define('WEBSOCKET_HOST', 'localhost');
define('WEBSOCKET_PORT', 4567);

# Nginx directories
define('NGINX_CONF_DIR', '/etc/nginx');
define('NGINX_SITES_AVAILABLE_DIR', NGINX_CONF_DIR . '/sites-available');
define('NGINX_SITES_ENABLED_DIR', NGINX_CONF_DIR . '/sites-enabled');
# Nginx webroot
define('NGINX_WEBROOT', '/var/www/html');
# Nginx log directory
define('NGINX_LOG_DIR', '/var/log/nginx');

# PHP directories
define('PHP_VERSION', '8.3');
# PHP-FPM socket
define('PHP_FPM_SOCK', '/run/php/php' . PHP_VERSION . '-fpm.sock');
# PHP-FPM configuration
define('PHP_FPM_CONF_DIR', '/etc/php/' . PHP_VERSION . '/fpm');
# PHP-FPM log directory
define('PHP_FPM_LOG_DIR', '/var/log/php-fpm');
# PHP-FPM configuration file
define('PHP_FPM_CONF_FILE', PHP_FPM_CONF_DIR . '/php-fpm.conf');

# Project installation directories
# First, define the GNU Coding Standards directories
define('prefix', '/usr/local');
define('datarootdir', prefix . '/share');
define('datadir', datarootdir);
define('localstatedir', prefix . '/var');
define('sysconfdir', prefix . '/etc');
define('pkgdatadir', datadir . '/brochat');
define('pkglocalstatedir', localstatedir . '/brochat');
define('pkgsysconfdir', sysconfdir . '/brochat');
# Then, define the Bro Chat directories
define('PUBLIC_DIR', pkgdatadir . '/public');
define('PRIVATE_DIR', pkgdatadir . '/private');
define('DB_DIR', pkglocalstatedir . '/db');
define('LOG_DIR', pkglocalstatedir . '/logs');
define('NOTES_DIR', pkglocalstatedir . '/notes');
define('SNAPS_DIR', pkglocalstatedir . '/snaps');
define('SNAPS_PREVIEWS_DIR', SNAPS_DIR . '/previews');
define('CONFIG_DIR', pkgsysconfdir);
# And some special files
define('CONFIG_FILE', CONFIG_DIR . '/config.php');
define('DB_FILE', DB_DIR . '/brochat.db');
// define('DB_DSN', 'sqlite:' . __DIR__ . '/../data/brochat.db');
?>