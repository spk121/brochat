# Nginx configuration file
define('NGINX_CONF_FILE', NGINX_SITES_AVAILABLE_DIR . '/brochat.conf');
# Nginx webroot
define('NGINX_WEBROOT', '/var/www/html');
# Nginx log directory
define('NGINX_LOG_DIR', '/var/log/nginx');
define('NGINX_USER', 'www-data');
define('NGINX_GROUP', 'www-data');

# PHP directories
define('PHP_EFFECTIVE_VERSION', '@php_effective_version@');
# PHP-FPM socket
